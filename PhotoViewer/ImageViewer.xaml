<UserControl x:Class="PhotoViewer.ImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoViewer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <!-- 增加一个图片查看视图，并指定该视图可以被垂直、水平滚动 -->
        <ScrollViewer Name="ImageScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <!-- 在视图中添加一个图片，默认 Stretch="Uniform" 自动缩放至窗口大小，高质量展示图片质量 -->
            <Image Name="DisplayImage" RenderOptions.BitmapScalingMode="HighQuality"/>
        </ScrollViewer>
    </Grid>
</UserControl>